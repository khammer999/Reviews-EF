
@model IEnumerable<ReviewSite.Models.Category>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
   <head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/styles/main.css" />

    <title>Index</title>
    </head>
  <body>
    <header>
    <h1> Category Home Page</h1>
    </header>
    <main>

        <section>
            <p>These are the avaialble review categories</p>
        </section>

        <nav>

            @foreach (var category in Model)
            {
                <div>

                    <a href="/Category/Details/@category.Id">
                        Click to view details for : 
                        @category.Name
                    </a>

                </div>
            }
        </nav>
        <footer>
            <a href="~/Reviews">Go to Home Page</a>
        </footer>

     </main>
   </body>
</html>
